    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title Document
    link(rel="stylesheet", href="assets/css/style.css")
  body
    .page
      .page__inner
        header.header
          .header__container
            .header__inner
              a.header__logo(href='#')
                img.logo(src='./static/img/logo__legacy_icon.svg' alt='wrike')
              .profile-link
                a.profile-link__wrap(href="#")
                  img.profile-link__avatar(src='./static/img/john.jpg' alt='john')
                  .profile-link__person-data.profile-link__arrow
                    span.profile-link__name Jhon
                    span.profile-link__company Wrike Team
                .profile-link-dropdown
                  .profile-link-dropdown__inner
                    span.profile-link-dropdown__department wrike team
                    ul.profile-link-dropdown__list
                      li.profile-link-dropdown__item
